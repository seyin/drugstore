= form_for @inventory, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :medicine_id, :class => 'control-label'
    .controls
      = f.number_field :medicine_id, :class => 'number_field'
  .control-group
    = f.label :quantity, :class => 'control-label'
    .controls
      = f.number_field :quantity, :class => 'number_field'
  .control-group
    = f.label :sale_price, :class => 'control-label'
    .controls
      = f.number_field :sale_price, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), inventories_path, :class => 'btn'

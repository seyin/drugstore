- model_class = Inventory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize

= link_to t('.new', :default => t("helpers.links.new")), '#', :class => 'btn btn-primary', :id => 'new_inventory'
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:medicine_id)
      %th= model_class.human_attribute_name(:quantity)
      %th= model_class.human_attribute_name(:sale_price)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @inventories.each do |inventory|
      %tr
        %td= link_to inventory.id, inventory_path(inventory)
        %td= inventory.medicine_id
        %td= inventory.quantity
        %td= inventory.sale_price
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_inventory_path(inventory), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), inventory_path(inventory), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

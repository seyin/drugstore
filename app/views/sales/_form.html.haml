= form_for @sale, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :client, :class => 'control-label'
    .controls
      = f.text_field :client, :class => 'text_field'
  .control-group
    = f.label :nit, :class => 'control-label'
    .controls
      = f.text_field :nit, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), sales_path, :class => 'btn'

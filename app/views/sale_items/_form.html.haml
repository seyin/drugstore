= form_for @sale_item do |f|
  = f.error_messages
  %p
    = f.label :medicine_id
    %br
    = f.number_field :medicine_id
  %p
    = f.label :sale_id
    %br
    = f.number_field :sale_id
  %p
    = f.label :quantity
    %br
    = f.number_field :quantity
  %p
    = f.label :price
    %br
    = f.text_field :price
  %p
    = f.submit
